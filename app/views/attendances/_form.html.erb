<%= form_for @attendance, :html => { :class => "form-horizontal attendance" } do |f| %>

  <% if @attendance.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@attendance.errors.count, "error") %> prohibited this attendance from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @attendance.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :team_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :team_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:team_id) %>
  </div>
  <div class="form-group">
    <%= f.label :event_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :event_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:event_id) %>
  </div>
  <div class="form-group">
    <%= f.label :round, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :round, :class => 'form-control' %>
    </div>
    <%=f.error_span(:round) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                attendances_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
