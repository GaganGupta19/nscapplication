<div class="row">
  <div class="col-md-6">

<h1>Registration Desk Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal reg_desks"})  do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' ,autofocus: true %>
    </div>
    <%=f.error_span(:name) %>
  </div>

<div class="form-group">
    <%= f.label :rollnumber, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rollnumber, :class => 'form-control' ,autofocus: true %>
    </div>
    <%=f.error_span(:rollnumber) %>
  </div>

    <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>

    <div class="form-group">
    <%= f.label :password ,:class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%= f.password_field :password, :class => 'form-control',autocomplete: "off" %>
    </div>
    <%=f.error_span(:password) %>    
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%= f.password_field :password_confirmation, :class => 'form-control', autocomplete: "off" %>
    </div>
    <%=f.error_span(:password) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Sign Up', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
</div></div>
<div class= "row">
  <div class= "col-md-6">
  <%= render "devise/shared/links" %>
  </div>
</div>

