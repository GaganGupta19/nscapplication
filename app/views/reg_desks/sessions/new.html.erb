<h1>Registration Desk Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal sessions"})  do |f| %>
  <div class="form-group">  
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
      <%=f.error_span(:email) %>
  </div>

  <div class="form-group">  
    <%= f.label :password, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
      <%=f.error_span(:password) %>
  </div>

  <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , :class => 'control-label col-lg-2'%>
    </div>
  <% end -%>
<br>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= render "reg_desks/shared/links" %><br><br>
      <%= f.submit 'Log In', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>






