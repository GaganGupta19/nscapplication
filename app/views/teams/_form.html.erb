<div class="row">
  <div class="col-md-6">
<%= form_for @team, :html => { :class => "form-horizontal team" } do |f| %>

  <% if @team.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @team.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
  <%= f.label :participant_ids, "Select Participants", :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
  <%= f.collection_select :participant_ids, Participant.order(:name), :id, :full_info, {}, {multiple: true} %></div>
  <%=f.error_span(:name) %>
  </div>
  
  <div class="form-group">
  <%= f.label :event_ids, "Select Events" ,:class => 'control-label col-lg-2'%>
  <div class="col-lg-10">  
   <%= f.collection_select :event_ids, Event.order(:name), :id, :name, {}, {multiple: true} %></div>
  <%=f.error_span(:name) %>
  </div>
  

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                teams_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
</div>
</div>